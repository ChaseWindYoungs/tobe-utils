{
  "compilerOptions": {
      "incremental": true,
      "target": "es5",
      "lib": ["ESNext", "DOM", "ES2018"],
      "jsx": "preserve",
      "experimentalDecorators": true,
      "jsxFragmentFactory": "Fragment",
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
          "@/*": ["packages/*"]
      },
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": true,
      "declaration": true,  /*  Generate .d.ts files from TypeScript and JavaScript files in your project. 自动从项目中的 TypeScript 和 JavaScript 文件生成 .d.ts 文件 */
      "sourceMap": true,
      "importHelpers": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictFunctionTypes": false,
      "skipLibCheck": true
  }
}
